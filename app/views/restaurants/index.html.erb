<p id="notice"><%= notice %></p>

<h1><table>
<tr> Restaurants </tr>
<tr><%= button_to 'New Restaurant', new_restaurant_path %></tr>
</table>
</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Up vote</th>
      <th>Down vote</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% if @restaurants.blank? %>
      <h4> There are no restaurants that have that name or location <%= params[:search] %>.</h4>
      <% end %>


  <tbody>
  <% if user_signed_in? %>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
        <td><%= restaurant.up_vote %></td>
        <td><%= restaurant.down_vote %></td>
        <td><%= link_to 'Show', restaurant %></td>
	<td><%= button_to 'Up Vote', upvote_restaurant_path(restaurant), method: 'patch' %></td>
	<td><%= button_to 'Down Vote', downvote_restaurant_path(restaurant), method: 'patch'%></td>
      </tr>
    <% end %>
  <%else %>
<% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
        <td><%= link_to 'Show', restaurant %></td>
      </tr>
    <% end %>


    <% end %>
  </tbody>
</table>

