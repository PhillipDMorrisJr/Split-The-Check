<p id="notice"><%= notice %></p>

<h1><table>
<tr> Restaurants </tr>

</table>
</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Up vote</th>
      <th>Down vote</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
<% if @restaurants.blank? %>
      <h4> There are no restaurants that have that name or location <%= params[:search] %>.</h4>
      <% end %>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.location %></td>
         <% if user_signed_in? %>
        <td><%= restaurant.upvote %></td>
        <td><%= restaurant.downvote %></td>
       


	<td><%= button_to 'Up Vote', upvote_restaurant_path(restaurant), method: 'patch' %></td>
	<td><%= button_to 'Down Vote', downvote_restaurant_path(restaurant), method: 'patch'%></td>
      <% end %>
        <td><%= link_to 'Show', restaurant %></td>
      </tr>
    <% end %>  
  </tbody>
</table>

